{
  "name": "Thiccfont",
  "version": "1.0",
  "description": "Turns English text into Japanese gibberish!",
  "manifest_version": 2,
  "permissions":[
    "activeTab"
  ],
  "background":{
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup":"popup.html"
  },
  "commands": {
    "to-japanese":{
      "suggested_key":{
        "default": "Ctrl+J",
        "mac": "Command+J"
      },
      "description": "Convert to thicc font"
    }
  }
}
